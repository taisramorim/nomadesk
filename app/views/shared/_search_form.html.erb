<%= simple_form_for Search.new, url: searches_path, method: :get, class: 'navbar-form', role: 'search' do |f| %>
  <div class="input-group">
    <%= f.input :location, label: false, input_html: { class: 'form-control', placeholder: 'Location' } %>

    <div class="input-group-append">
      <%= f.input :check_in, label: false, as: :string, input_html: { class: 'form-control flatpickr', placeholder: 'Check-in', autocomplete: 'off' } %>
    </div>

    <div class="input-group-append">
      <%= f.input :check_out, label: false, as: :string, input_html: { class: 'form-control flatpickr', placeholder: 'Check-out', autocomplete: 'off' } %>
    </div>

    <div class="input-group-append">
      <%= f.button :submit, 'Search', class: 'btn btn-outline-success' %>
    </div>
  </div>
<% end %>
