<%= form_with url: searches_path, method: :get, class: 'navbar-form', role: 'search' do |f| %>
  <div class="input-group">
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Find a place"
          %>
  <div class="input-group-append">
    <%= text_field_tag :check_in,
      params[:check_in],
      class: 'form-control flatpickr',
      placeholder: 'Check-in',
      data: { controller: "datepicker"},  autocomplete: 'off', style: 'width: 120px; margin-right: 5px;' %>
  </div>

  <div class="input-group-append">
    <%= text_field_tag :check_out,
    params[:check_out],
    class: 'form-control flatpickr',
    placeholder: 'Check-out',
    data: { controller: "datepicker"},   autocomplete: 'off', style: 'width: 120px; margin-right: 5px;' %>
  </div>

  <div class="input-group-append">
    <%= submit_tag "Search",
      name: "",
      class: "btn btn-outline-success"
    %>
  </div>
</div>
<% end %>
