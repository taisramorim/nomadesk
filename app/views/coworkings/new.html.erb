<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Add a new coworking space here:</h3>
        <%= simple_form_for @coworking do |f| %>
          <%= f.input :title, placeholder: 'Add a title' %>
          <%= f.input :address, placeholder: 'Add an address' %>
          <%= f.input :description, placeholder: 'Add a description' %>
          <%= f.input :price, placeholder: 'Add the price' %>
          <%= f.input :image %>
          <%= f.submit class: 'btn btn-primary' %>
          <%= link_to 'Cancel', root_path, class: 'btn btn-light' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
