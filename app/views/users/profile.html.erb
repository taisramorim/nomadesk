              </div>
              <div class="card-body">
                <p><strong><%= rent.coworking.title %></strong></p>
                <p><%= rent.coworking.address %></p>
                <p><%= "$ #{rent.coworking.price}" %></p>
                <p><%= rent.coworking.description %></p>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
